# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/isms_db"
# Railway will automatically set DATABASE_URL environment variable

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV="development"
PORT=3000
HOST="0.0.0.0"
# Railway will automatically set PORT environment variable

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"
# For production, update to your frontend domain: "https://your-frontend-domain.vercel.app"

# Logging Configuration
LOG_LEVEL="info"

# Railway-specific environment variables (set these in Railway dashboard):
# - DATABASE_URL: Automatically provided by Railway PostgreSQL service
# - PORT: Automatically provided by Railway (usually 3000)
# - NODE_ENV: Set to "production" for production deployments
# - JWT_SECRET: Generate a strong secret key for production
# - CORS_ORIGIN: Set to your frontend application URL

# Optional: Database seeding (set to "true" to seed the database)
# SEED_DATABASE="false"