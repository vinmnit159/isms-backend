{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run start:safe",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  },
  "services": {
    "database": {
      "type": "postgres",
      "imageUrl": "postgres:15-alpine"
    }
  }
}